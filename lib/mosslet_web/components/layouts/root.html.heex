<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
  <.head conn={@conn} />

  <body class="text-slate-600 bg-gradient-to-br from-slate-50 via-slate-50 to-slate-100 dark:text-slate-400 dark:bg-gradient-to-br dark:from-slate-900 dark:via-slate-900 dark:to-slate-800 min-h-screen">
    <svg style="position:absolute;width:0;height:0;overflow:hidden;">
      <defs>
        <filter id="water-ripple-filter" x="-20%" y="-20%" width="140%" height="140%">
          <feTurbulence
            id="water-turbulence"
            type="turbulence"
            baseFrequency="0.004"
            numOctaves="3"
            seed="2"
            result="noise"
          />
          <feDisplacementMap
            id="water-displacement"
            in="SourceGraphic"
            in2="noise"
            scale="0"
            xChannelSelector="R"
            yChannelSelector="G"
          />
        </filter>
        <filter id="wave-edge-distort" x="-20%" y="-20%" width="140%" height="140%">
          <feTurbulence
            id="wave-edge-turbulence"
            type="turbulence"
            baseFrequency="0.012 0.014"
            numOctaves="2"
            seed="5"
            result="wavyNoise"
          />
          <feDisplacementMap
            in="SourceGraphic"
            in2="wavyNoise"
            scale="8"
            xChannelSelector="R"
            yChannelSelector="G"
          />
        </filter>
      </defs>
    </svg>
    {@inner_content}
  </body>
</html>
