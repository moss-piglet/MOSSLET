# Environment variables for docker-compose development
#
# Copy this file to .env and fill in actual values:
#   cp .env.docker.example .env
#
# These are OPTIONAL - the docker-compose.yml has sensible defaults
# for running locally without external services.

# Generate with: mix phx.gen.secret
SECRET_KEY_BASE=dev_secret_key_base_that_is_at_least_64_bytes_long_for_security_purposes

# Session salts (generate with: :crypto.strong_rand_bytes(8) |> Base.encode64())
SESSION_SIGNING_SALT=dev_signing_salt_min_8_chars
SESSION_ENCRYPTION_SALT=dev_encryption_salt_min_8

# Server encryption keys (generate with Mosslet.Encryption.generate_keypair())
# Leave empty to skip features requiring encryption
SERVER_PUBLIC_KEY=
SERVER_PRIVATE_KEY=

# Tigris/S3 file uploads (optional - uploads will fail without these)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=
AWS_HOST=

# Stripe (optional - billing features disabled without)
STRIPE_API_KEY=
STRIPE_WEBHOOK_SECRET=

# OpenAI/LangChain (optional - AI features disabled without)
OPENAI_KEY=
OPENAI_ORG_ID=
